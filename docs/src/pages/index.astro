---
const title = "NUKE Design System";
import '../nuke-theme/style.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <script type="module" src="/src/nuke-theme/core.js"></script>
  <style is:inline>
    * {
      box-sizing: border-box;
    }

    html {
      margin: 0;
      padding: 0;
    }

    body {
      display: block;
      margin: 0;
      padding: 0;
      overflow: auto;
    }

    .header {
      position: sticky;
      top: 0;
      z-index: 100;
      background: var(--background-2);
      border-bottom: 1px solid var(--border-color-1);
      padding: 0 var(--space-3);
      display: grid;
      grid-template-columns: 1fr auto;
      align-items: center;
      gap: var(--space-3);
      height: var(--height-3);
    }

    .logo-wrap {
      display: flex;
      align-items: flex-end;
    }

    .logo {
      display: flex;
      align-items: flex-end;
      gap: var(--space-1);
    }

    .logo-nuke {
      font-family: var(--family-2),sans-serif;
      font-size: 2rem;
      font-weight: 900;
      text-transform: uppercase;
      line-height: 1;
      margin: 0;
    }

    .logo-subtitle {
      font-size: 1rem;
      font-weight: 400;
      text-transform: lowercase;
      line-height: 1;
      margin: 0;
      padding-bottom: 0.15em;
    }

    .theme-toggle {
      font-size: var(--font-size-1);
      font-weight: 900;
      text-transform: uppercase;
      background: none;
      border: none;
      color: var(--on-background);
      cursor: pointer;
      padding: 0;
      line-height: 1;
    }

    /* Collection section */
    .collection {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1px;
      background: var(--border-color-1);
      margin-bottom: 1px;
      background: var(--background-1);
    }

    .collection-header {
      grid-column: 1 / -1;
      background: var(--background-1);
      padding: var(--space-3) var(--space-3);
      font-weight: 900;
      text-transform: uppercase;
      font-size: var(--font-size-3);
      letter-spacing: -0.05em;
      font-style: italic;
      height: var(--height-2);
      display: flex;
      align-items: center;
    }

    .column {
      background: var(--background-2);
    }

    .column-header {
      position: sticky;
      top: var(--height-3);
      background: var(--background-1);
      padding: var(--space-2);
      border-bottom: 2px solid var(--border-color-1);
      font-weight: 900;
      font-size: var(--font-size-3);
      text-align: center;
      text-transform: uppercase;
      letter-spacing: -0.05em;
      font-style: italic;
      z-index: 50;
    }

    .element {
      padding: var(--space-3);
      border-bottom: 1px solid var(--border-color-1);
      background: var(--background-2);
    }

    .element:last-child {
      border-bottom: none;
    }

    .element-name {
      display: inline-block;
      font-family: var(--code-font-family);
      font-size: var(--font-size-1);
      color: var(--on-background);
      margin-bottom: var(--space-2);
      background: var(--background-3);
      padding: 0.25em 0.5em;
      border-radius: var(--border-radius);
    }
  </style>
</head>
