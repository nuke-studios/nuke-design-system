  <script is:inline>
    function showToast(variant) {
      const toast = document.createElement('nuke-toast');
      toast.setAttribute('nuke-style', variant);
      toast.textContent = `Toast (${variant})`;
      document.body.appendChild(toast);
    }

    function showSidebar(variant) {
      const sidebar = document.createElement('nuke-sidebar');
      sidebar.setAttribute('nuke-style', variant);
      sidebar.innerHTML = `<h3>Sidebar</h3><p>Content</p><button nuke-style="${variant}" onclick="this.closest('nuke-sidebar').close()">Close</button>`;
      document.body.appendChild(sidebar);

      // Wait for connectedCallback to run
      setTimeout(() => {
        sidebar.open();
      }, 0);
    }
  </script>
