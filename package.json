{
  "name": "@nuke.dev/design-system",
  "version": "1.0.0",
  "description": "Element-first CSS design system with web components. Universal .style-1/2/3 pattern for native HTML elements and custom components.",
  "keywords": [
    "css",
    "design-system",
    "web-components",
    "custom-elements",
    "theme",
    "ui",
    "nuke",
    "element-first",
    "native-elements"
  ],
  "author": "nuke-studios <github@heer.dev>",
  "license": "MIT",
  "homepage": "https://github.com/nuke-studios/nuke-design-system#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuke-studios/nuke-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/nuke-studios/nuke-design-system/issues"
  },
  "main": "core/all.css",
  "module": "components/core.js",
  "type": "module",
  "scripts": {
    "postinstall": "node .scripts/postinstall.js",
    "build": "bun run build:clean && bun run build:theme && bun run build:css && bun run build:ts",
    "build:watch": "node .scripts/watch-incremental.js",
    "build:clean": "mkdir -p dist/nuke-theme/components dist/types",
    "build:ts": "tsc && bun build core/core.ts --outdir dist/nuke-theme --format esm",
    "build:css": "node .scripts/bundle-core-css.js",
    "build:theme": "node .scripts/build-theme.js"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/",
    ".scripts/postinstall.js",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
