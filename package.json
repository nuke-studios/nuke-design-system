{
  "name": "@nuke.dev/design-system",
  "version": "1.0.0",
  "description": "Element-first CSS design system with web components. Universal .style-1/2/3 pattern for native HTML elements and custom components.",
  "keywords": [
    "css",
    "design-system",
    "web-components",
    "custom-elements",
    "theme",
    "ui",
    "nuke",
    "element-first",
    "native-elements"
  ],
  "author": "c-heer <github@heer.dev>",
  "license": "MIT",
  "homepage": "https://github.com/c-heer/nuke-design-system#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-heer/nuke-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/c-heer/nuke-design-system/issues"
  },
  "main": "core/all.css",
  "module": "components/core.js",
  "type": "module",
  "scripts": {
    "postinstall": "node .scripts/postinstall.js",
    "build": "bun run build:clean && bun run build:ts && bun run build:css && bun run build:theme && bun run build:cleanup",
    "build:watch": "bun run build && node .scripts/watch.js",
    "build:clean": "mkdir -p dist dist/nuke-theme dist/types",
    "build:ts": "tsc && bun build core/core.ts --outdir dist --format esm",
    "build:css": "node .scripts/bundle-core-css.js",
    "build:theme": "node .scripts/build-theme.js",
    "build:cleanup": "find dist -mindepth 1 -maxdepth 1 -type d ! -name 'nuke-theme' ! -name 'types' -exec rm -rf {} +",
    "docs:dev": "astro dev --root docs --host",
    "docs:build": "astro build --root docs"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "astro": "^4.16.18",
    "typescript": "^5.0.0"
  },
  "files": [
    "core/",
    "theme/",
    "components/",
    ".scripts/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
