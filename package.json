{
  "name": "@nuke.dev/design-system",
  "version": "1.0.0",
  "description": "Element-first CSS design system with web components. Universal .style-1/2/3 pattern for native HTML elements and custom components.",
  "keywords": [
    "css",
    "design-system",
    "web-components",
    "custom-elements",
    "theme",
    "ui",
    "nuke",
    "element-first",
    "native-elements"
  ],
  "author": "nuke-studios <github@heer.dev>",
  "license": "MIT",
  "homepage": "https://github.com/nuke-studios/nuke-design-system#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuke-studios/nuke-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/nuke-studios/nuke-design-system/issues"
  },
  "main": "dist/core.css",
  "module": "dist/core.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:clean && npm run build:icons && npm run build:css && npm run build:ts",
    "build:clean": "mkdir -p dist/types dist/icons",
    "build:ts": "tsc && esbuild core/core.ts --bundle --format=esm --outfile=dist/core.js",
    "build:css": "node .scripts/bundle-core-css.js",
    "build:icons": "cp core/icons/*.svg dist/icons/",
    "dev": "npm run build:icons && npm run build:css && esbuild core/core.ts --bundle --format=esm --outfile=dist/core.js --watch"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@phosphor-icons/core": "^2.1.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
