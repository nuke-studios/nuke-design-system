{
  "_purpose": "Work items with status tracking",
  "_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
      "_purpose": {
        "description": "Purpose of this file",
        "type": "string"
      },
      "items": {
        "items": {
          "properties": {
            "description": {
              "type": "string"
            },
            "id": {
              "pattern": "^task-[0-9]+$",
              "type": "string"
            },
            "priority": {
              "enum": [
                "low",
                "medium",
                "high"
              ],
              "type": "string"
            },
            "status": {
              "enum": [
                "new",
                "in_progress",
                "completed"
              ],
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "type": {
              "enum": [
                "bug",
                "feature",
                "hotfix"
              ],
              "type": "string"
            }
          },
          "required": [
            "id",
            "title"
          ],
          "type": "object"
        },
        "type": "array"
      }
    },
    "required": [
      "_purpose",
      "items"
    ],
    "type": "object"
  },
  "items": [
    {
      "id": "task-1",
      "title": "Change bun to npm as builder",
      "status": "new",
      "priority": "high",
      "description": "Replace bun with npm for build scripts"
    },
    {
      "id": "task-2",
      "title": "Fix broken components",
      "status": "new",
      "priority": "high",
      "description": "Identify and fix web components that are not working correctly"
    },
    {
      "id": "task-3",
      "title": "Decide what components are needed",
      "status": "new",
      "priority": "medium",
      "description": "Review component list and determine which ones are actually needed"
    },
    {
      "id": "task-4",
      "title": "Check nuke-docs project for references",
      "status": "new",
      "priority": "medium",
      "description": "Look at nuke-docs project to see what components are used and how they work in a real project"
    },
    {
      "id": "task-5",
      "title": "Publish to npm",
      "status": "new",
      "description": "Publish @nuke.dev/design-system to npm registry"
    }
  ]
}