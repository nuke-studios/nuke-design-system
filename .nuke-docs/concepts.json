{
  "_purpose": "Architecture patterns and key concepts",
  "_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
      "_purpose": {
        "description": "Purpose of this file",
        "type": "string"
      },
      "items": {
        "items": {
          "properties": {
            "description": {
              "type": "string"
            },
            "details": {
              "type": "object"
            },
            "id": {
              "pattern": "^concept-[0-9]+$",
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "title"
          ],
          "type": "object"
        },
        "type": "array"
      }
    },
    "required": [
      "_purpose",
      "items"
    ],
    "type": "object"
  },
  "items": [
    {
      "id": "concept-1",
      "title": "Flat Architecture",
      "details": {
        "concept": "Single-layer design: tokens defined once in style.css, used directly in component CSS",
        "no_abstraction": "No component-specific CSS variables (e.g., --button-bg). Components use design tokens directly (e.g., var(--background-4))",
        "single_file_per_component": "Each component has one .css file containing reset, base styles, and style variants",
        "style_variants": "Three global style variants via nuke-style='1/2/3' attribute selector pattern"
      }
    },
    {
      "id": "concept-2",
      "title": "Design Tokens",
      "details": {
        "location": "core/style.css - single source of truth",
        "naming_convention": "Always use 1-2-3 suffix pattern (e.g., --border-radius-1, --z-index-2)",
        "token_categories": {
          "colors": "--background-1/2/3/4, --on-background, --border-color-1/2",
          "layout": "--width-1/2/3, --height-1/2/3, --z-index-1/2/3",
          "spacing": "--space-1/2/3",
          "typography": "--font-size-1/2/3, --font-weight-*, --line-height-*",
          "ui": "--border-radius-1/2/3, --box-shadow-1/2/3, --opacity-disabled"
        }
      }
    },
    {
      "id": "concept-3",
      "title": "Build System",
      "details": {
        "build_output": {
          "dist/core.css": "Bundled CSS (tokens + all component styles)",
          "dist/core.js": "Bundled web components"
        },
        "build_scripts": {
          "build:css": ".scripts/bundle-core-css.js - Bundles all CSS into dist/core.css",
          "build:ts": "tsc + bun build - Compiles TypeScript web components"
        },
        "source_structure": {
          "core/style.css": "Design tokens",
          "core/core.css": "CSS entry point (imports style.css + all component CSS)",
          "core/core.ts": "Web component exports",
          "core/components/[name]/[name].css": "Component styles (single file)",
          "core/components/[name]/[name].ts": "Web component (if interactive)"
        }
      }
    },
    {
      "id": "concept-4",
      "title": "Usage",
      "details": {
        "import_css": "<link rel='stylesheet' href='dist/core.css'>",
        "import_js": "<script type='module' src='dist/core.js'></script>",
        "customize_tokens": "Override CSS variables in your own stylesheet after importing core.css",
        "style_variants": "Add nuke-style='1', '2', or '3' attribute to elements for different visual styles"
      }
    }
  ]
}