{
  "_purpose": "Dev commands - what to run and why",
  "_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
      "_purpose": {
        "description": "Purpose of this file",
        "type": "string"
      },
      "items": {
        "items": {
          "properties": {
            "id": {
              "pattern": "^cmd-[0-9]+$",
              "type": "string"
            },
            "run": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "why": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "title",
            "run"
          ],
          "type": "object"
        },
        "type": "array"
      }
    },
    "required": [
      "_purpose",
      "items"
    ],
    "type": "object"
  },
  "items": [
    {
      "id": "cmd-1",
      "title": "Build All",
      "run": "npm run build",
      "why": "Full build: CSS bundle + TypeScript web components"
    },
    {
      "id": "cmd-2",
      "title": "Build Watch",
      "run": "npm run build:watch",
      "why": "Incremental builds during development"
    }
  ]
}