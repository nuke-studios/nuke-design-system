{
  "_purpose": "Libraries and packages used",
  "_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
      "_purpose": {
        "description": "Purpose of this file",
        "type": "string"
      },
      "items": {
        "items": {
          "properties": {
            "description": {
              "type": "string"
            },
            "id": {
              "pattern": "^dep-[0-9]+$",
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "title"
          ],
          "type": "object"
        },
        "type": "array"
      }
    },
    "required": [
      "_purpose",
      "items"
    ],
    "type": "object"
  },
  "items": [
    {
      "id": "dep-1",
      "title": "Lit",
      "description": "Web component framework"
    },
    {
      "id": "dep-2",
      "title": "@phosphor-icons/core",
      "description": "Icon source - SVGs copied to core/icons/"
    },
    {
      "id": "dep-3",
      "title": "esbuild",
      "description": "Bundler for CSS and TypeScript"
    }
  ]
}